<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: add NestedScrollView to support lots of legs. Doesn't work on Nexus 5X -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvLegs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:scrollbars="vertical"/>

    <com.paranoidandroid.journey.wizard.views.CustomAutoCompleteTextView
        android:id="@+id/atvPlaces"
        android:textColor="@color/colorWizardName"
        android:textSize="@dimen/wizard_legs_text_size"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/new_leg_hint" />

</LinearLayout>
